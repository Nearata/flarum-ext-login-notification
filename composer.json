{
    "name": "nearata/flarum-ext-login-notification",
    "description": "Allows the user to choose whether to receive an email when a login occurs",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "Unlicense",
    "require": {
        "flarum/core": "^1.6.0",
        "jenssegers/agent": "^2.0"
    },
    "authors": [
        {
            "name": "Nearata",
            "email": "nearata@protonmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nearata\\LoginNotification\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Login Notification",
            "category": "feature",
            "icon": {
                "name": "fas fa-sign-in-alt",
                "color": "#fff",
                "backgroundColor": "#000"
            }
        }
    }
}
